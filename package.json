{
  "name": "praxisprojekt",
  "private": true,
  "scripts": {
    "lint": "eslint src",
    "fix": "eslint src --fix",
    "dev": "npm i && cross-env NODE_OPTIONS='--inspect' next",
    "build": "next build",
    "start": "next start",
    "sync": "git fetch && git merge origin/master -m 'Update from master via npm run sync'"
  },
  "dependencies": {
    "@ionic/react": "file:lib/ionic-react-5.3.4.tgz",
    "@react-hook/media-query": "^1.1.1",
    "antd": "^4.7.0",
    "cookie": "^0.4.1",
    "email-validator": "^2.0.4",
    "file-loader": "^6.1.1",
    "firebase": "^7.23.0",
    "firebase-admin": "^9.2.0",
    "ionicons": "^5.2.3",
    "jsonwebtoken": "^8.5.1",
    "moment": "^2.29.1",
    "neat-csv": "^5.2.0",
    "next": "^9.5.4",
    "next-pwa": "^3.1.5",
    "pg": "^8.4.0",
    "pg-format": "^1.0.4",
    "raw-loader": "^4.0.1",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-hook-form": "^6.9.2",
    "react-no-ssr": "^1.1.0",
    "swr": "^0.3.5",
    "typeface-roboto": "1.1.13"
  },
  "devDependencies": {
    "cross-env": "^7.0.2",
    "eslint": "^7.11.0",
    "eslint-config-airbnb": "^18.2.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsdoc": "^30.6.4",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-react": "^7.21.3",
    "eslint-plugin-react-hooks": "^4.1.2"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2020": true,
      "node": true
    },
    "extends": [
      "airbnb",
      "airbnb/hooks",
      "plugin:jsdoc/recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 2020
    },
    "rules": {
      "arrow-body-style": 0,
      "import/prefer-default-export": 0,
      "import/no-anonymous-default-export": [
        "error"
      ],
      "jsdoc/require-param-description": 0,
      "jsdoc/require-returns": 0,
      "jsdoc/valid-types": 0,
      "jsx-a11y/anchor-is-valid": [
        "error",
        {
          "components": [
            "Link"
          ],
          "specialLink": [
            "hrefLeft",
            "hrefRight"
          ],
          "aspects": [
            "invalidHref",
            "preferButton"
          ]
        }
      ],
      "linebreak-style": 0,
      "max-len": 0,
      "no-await-in-loop": 0,
      "no-plusplus": [
        "error",
        {
          "allowForLoopAfterthoughts": true
        }
      ],
      "no-restricted-syntax": [
        "error",
        "ForInStatement",
        "LabeledStatement",
        "WithStatement"
      ],
      "no-return-await": 0,
      "no-nested-ternary": 0,
      "object-curly-newline": [
        "error",
        {
          "multiline": true
        }
      ],
      "react/jsx-curly-spacing": [
        "error",
        {
          "when": "never",
          "children": true
        }
      ],
      "react/jsx-filename-extension": 0,
      "react/jsx-props-no-spreading": 0,
      "react/prop-types": 0,
      "react/react-in-jsx-scope": 0
    }
  }
}
