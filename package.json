{
  "name": "praxisprojekt",
  "private": true,
  "scripts": {
    "lint": "eslint src",
    "fix": "eslint src --fix",
    "dev": "npm i && cross-env NODE_OPTIONS='--inspect' next",
    "test": "jest",
    "build": "next build",
    "start": "next start",
    "sync": "git fetch && git merge origin/master -m \"Update from master via npm run sync\""
  },
  "dependencies": {
    "@ionic/react": "file:lib/ionic-react-5.4.4.tgz",
    "@react-hook/media-query": "^1.1.1",
    "@sentry/browser": "^5.27.4",
    "@sentry/integrations": "^5.27.4",
    "@sentry/node": "^5.27.4",
    "@sentry/webpack-plugin": "^1.13.0",
    "@zeit/next-source-maps": "^0.0.4-canary.1",
    "ace-builds": "^1.4.12",
    "antd": "^4.8.4",
    "cookie": "^0.4.1",
    "data-uri-to-buffer": "^3.0.1",
    "email-validator": "^2.0.4",
    "file-loader": "^6.2.0",
    "firebase": "^8.1.1",
    "firebase-admin": "^9.4.1",
    "ionicons": "^5.2.3",
    "jsonwebtoken": "^8.5.1",
    "moment": "^2.29.1",
    "neat-csv": "^5.2.0",
    "next": "^10.0.1",
    "next-pwa": "^3.1.5",
    "pg": "^8.5.1",
    "pg-format": "^1.0.4",
    "raw-loader": "^4.0.2",
    "react": "^17.0.1",
    "react-ace": "9.1.4",
    "react-csv": "^2.0.3",
    "react-dom": "^17.0.1",
    "react-hook-form": "^6.11.5",
    "react-no-ssr": "^1.1.0",
    "swr": "^0.3.9",
    "typeface-roboto": "1.1.13"
  },
  "devDependencies": {
    "babel-jest": "^26.6.3",
    "cross-env": "^7.0.2",
    "eslint": "^7.14.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.3",
    "eslint-plugin-jsdoc": "^30.7.8",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "^4.2.0",
    "jest": "^26.6.3",
    "jest-file-loader": "^1.0.1",
    "node-mocks-http": "^1.9.0"
  },
  "babel": {
    "presets": [
      "next/babel"
    ]
  },
  "jest": {
    "transform": {
      "^.+\\.(csv|txt)$": "<rootDir>/tests/utils/pathMock",
      "^.+\\.(js|jsx)?$": "babel-jest"
    },
    "setupFilesAfterEnv": [
      "<rootDir>/tests/utils/jest.setup"
    ]
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2020": true,
      "node": true,
      "jest": true
    },
    "extends": [
      "airbnb",
      "airbnb/hooks",
      "plugin:jsdoc/recommended",
      "plugin:jest/recommended",
      "plugin:jest/style"
    ],
    "parserOptions": {
      "ecmaVersion": 2020
    },
    "rules": {
      "arrow-body-style": 0,
      "import/prefer-default-export": 0,
      "import/no-anonymous-default-export": [
        "error"
      ],
      "jsdoc/require-param-description": 0,
      "jsdoc/require-returns": 0,
      "jsdoc/valid-types": 0,
      "jsx-a11y/anchor-is-valid": [
        "error",
        {
          "components": [
            "Link"
          ],
          "specialLink": [
            "hrefLeft",
            "hrefRight"
          ],
          "aspects": [
            "invalidHref",
            "preferButton"
          ]
        }
      ],
      "jsx-a11y/no-noninteractive-tabindex": 0,
      "linebreak-style": 0,
      "max-len": 0,
      "no-await-in-loop": 0,
      "no-param-reassign": 0,
      "no-plusplus": [
        "error",
        {
          "allowForLoopAfterthoughts": true
        }
      ],
      "no-restricted-syntax": [
        "error",
        "ForInStatement",
        "LabeledStatement",
        "WithStatement"
      ],
      "no-return-await": 0,
      "no-nested-ternary": 0,
      "object-curly-newline": [
        "error",
        {
          "multiline": true
        }
      ],
      "react/jsx-curly-spacing": [
        "error",
        {
          "when": "never",
          "children": true
        }
      ],
      "react/jsx-filename-extension": 0,
      "react/jsx-props-no-spreading": 0,
      "react/prop-types": 0,
      "react/react-in-jsx-scope": 0
    }
  }
}
